{
  "name": "gitcoin-enterprise",
  "version": "0.0.1",
  "description": "This project is inspired by [gitcoin.co](https://gitcoin.co/).   [gitcoin.co](https://gitcoin.co) improves Open Source & Peer To Peer collaboration.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "tslint": "tslint -p client/ -c tslint.json && tslint -p server/ -c tslint.json",
    "test": "cd server && npm run setup && cd ../ && npm run lint && npm run ut && npm run at",
    "ut": "cd server && npm run test",
    "at": "cd acceptance-tests && npm run acceptance-tests",
    "lint": "cd server && npm run lint && cd ../client && npm run lint",
    "docker-build": "docker build -t gitcoin-enterprise-docker-image",
    "start-via-docker-test": "docker run -it -p 3000:3000 my-docker-image",
    "start-via-docker": "docker run -it -p 3000:3000 gitcoin-enterprise-docker-image"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gitcoin-enterprise/gitcoin-enterprise.git"
  },
  "keywords": [
    "gig",
    "economy",
    "peer2peer",
    "PeerToPeer",
    "Trust"
  ],
  "author": "Michael Spengler",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/gitcoin-enterprise/gitcoin-enterprise/issues"
  },
  "homepage": "https://github.com/gitcoin-enterprise/gitcoin-enterprise#readme",
  "dependencies": {
    "@nestjs/passport": "^6.1.1",
    "husky": "^4.2.1",
    "ng-range": "0.0.1",
    "uuidv1": "^1.6.14"
  }
}
